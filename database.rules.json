{
  "rules": {
    "threads": {
      ".read": true,
      ".write": false,
      ".indexOn": ["tradie_id", "homeowner_id"],
      "$threadId": {
        "messages": {
          ".read": true,
          "$messageId": {
            ".write": true
          }
        },
        "typing": {
          ".read": true,
          ".write": true
        }
      }
    },
    "userProfiles": {
      ".read": true,
      ".write": false,
      "$userId": {
        ".indexOn": ["blockedUsers"],
        "blockedUsers": {
          ".read": true,
          ".write": true
        },
        "deletedMessages": {
          ".read": true,
          ".write": true
        },
        "online": {
          ".read": true,
          ".write": true
        }
      }
    },
    "counters": {
      ".read": true,
      ".write": false
    },
    "test": {
      ".read": true,
      ".write": false
    }
  }
}
